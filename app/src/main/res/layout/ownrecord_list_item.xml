<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorBasic"
        android:layout_marginTop="@dimen/textExtra_margin"
        android:layout_marginStart="@dimen/evevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/order_deviceSettingPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/image_margin"
        android:layout_marginStart="@dimen/textExtra_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_title"
        />
    <TextView
        android:id="@+id/recordRepairDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textExtra_margin"
        android:layout_marginStart="@dimen/textExtra_margin"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/order_deviceSettingPlace"
        />
    <TextView
        android:id="@+id/order_state_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_orderState"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/textExtra_margin"
        android:layout_marginStart="@dimen/textExtra_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordRepairDate"
        />
    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@+id/order_state_label"
        app:layout_constraintStart_toEndOf="@+id/order_state_label"
        app:layout_constraintBottom_toBottomOf="@+id/order_state_label"
        />
</androidx.constraintlayout.widget.ConstraintLayout>