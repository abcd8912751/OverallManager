<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/check_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:drawableLeft="@mipmap/ic_title_left"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/temp_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBasic"
            android:drawableLeft="@mipmap/ic_temp_left"
            android:background="@drawable/shape_timeandtemp"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="@dimen/dp_36"
            app:layout_constraintTop_toBottomOf="@+id/check_Title"
            />
        <TextView
            android:id="@+id/coolTime_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBasic"
            android:drawableLeft="@mipmap/ic_cooltime_left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="@dimen/right_horizontal_spacing"
            android:background="@drawable/shape_timeandtemp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/temp_Label"
            app:layout_constraintTop_toTopOf="@+id/temp_Label"
            />
        <TextView
            android:id="@+id/cycleTime_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBasic"
            android:drawableLeft="@mipmap/ic_cycletime_left"
            android:background="@drawable/shape_timeandtemp"
            app:layout_constraintHorizontal_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="@dimen/right_horizontal_spacing"
            app:layout_constraintLeft_toRightOf="@+id/coolTime_Label"
            app:layout_constraintTop_toTopOf="@+id/temp_Label"
            />
        <TextView
            android:id="@+id/label_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_remark"
            android:text="@string/label_Remark"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="@dimen/dp_36"
            app:layout_constraintTop_toBottomOf="@+id/temp_Label"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>