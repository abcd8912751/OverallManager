<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_welcome"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_operator"
        ></androidx.appcompat.widget.AppCompatTextView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_operatorId_hint"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/login_input_margin"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        app:layout_constraintTop_toBottomOf="@+id/label_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_login_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:drawablePadding="@dimen/dp_12"
            android:paddingStart="@dimen/login_horizontal_pading"
            android:singleLine="true"
            android:drawableStart="@mipmap/ic_user_left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/login_input_margin"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:hint="@string/login_password_hint"
        app:layout_constraintTop_toBottomOf="@+id/input_operator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/login_horizontal_pading"
            android:drawablePadding="@dimen/dp_12"
            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableStart="@mipmap/ic_password_left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:imeOptions="actionDone">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_startLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_button_margin"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:text="@string/login_button_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@drawable/skin_color_button"
        android:background="@drawable/selector_button"
        android:enabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_password"
        />
</androidx.constraintlayout.widget.ConstraintLayout>