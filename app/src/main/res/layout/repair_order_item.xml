<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/input_solid_width"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBasic"
            android:singleLine="false"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            android:drawableRight="@mipmap/ic_more_right"
            app:layout_constraintTop_toTopOf="@+id/order_title"
            app:layout_constraintBottom_toBottomOf="@+id/order_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabIndicatorHeight"
            android:background="@mipmap/imageview_image_normal"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin"
            app:layout_constraintTop_toBottomOf="@+id/order_title"
            />
        <TextView
            android:id="@+id/order_deviceSettingPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/separator_line"
            />
        <TextView
            android:id="@+id/order_orderContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/order_deviceSettingPlace"
            />
        <TextView
            android:id="@+id/order_recordDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/order_orderContent"
            />
        <TextView
            android:id="@+id/order_billID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/order_recordDate"
            />

        <TextView
            android:id="@+id/order_troubleGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/order_billID"
            />
        <TextView
            android:id="@+id/order_repairPersonnel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/order_troubleGrade"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
