<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_faultDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor="@color/Black"
        android:singleLine="false"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="@drawable/shape_device_question"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/label_stopDuration"
        android:text="@string/stop_Duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:layout_marginTop="@dimen/repair_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_faultDescription"
        />
    <EditText
        android:id="@+id/edit_stopDuration"
        android:layout_width="@dimen/input_solid_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:hint="@string/hint_empty"
        android:inputType="numberDecimal"
        android:drawableRight="@mipmap/hour_right"
        android:background="@drawable/shape_hour_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_stopDuration"
        app:layout_constraintBottom_toBottomOf="@+id/label_stopDuration"
        app:layout_constraintTop_toTopOf="@+id/label_stopDuration" />
    <TextView
        android:id="@+id/label_repairDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repair_Duration_label"
        android:textColor="@color/Black"
        android:layout_marginTop="@dimen/repair_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/label_stopDuration"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/edit_repairDuration"
        android:layout_width="@dimen/input_solid_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:inputType="numberDecimal"
        android:drawableRight="@mipmap/hour_right"
        android:hint="@string/hint_empty"
        android:background="@drawable/shape_hour_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_repairDuration"
        app:layout_constraintTop_toTopOf="@+id/label_repairDuration"
        app:layout_constraintBottom_toBottomOf="@+id/label_repairDuration"/>

    <TextView
        android:id="@+id/label_repairFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:text="@string/repairFee_label"
        android:layout_marginTop="@dimen/repair_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/label_repairDuration"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_repairFee"
        android:layout_width="@dimen/input_solid_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:inputType="numberDecimal"
        android:hint="@string/default_duration"
        android:drawableRight="@mipmap/currency_right"
        android:background="@drawable/shape_hour_input"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_repairFee"
        app:layout_constraintTop_toTopOf="@+id/label_repairFee"
        app:layout_constraintBottom_toBottomOf="@+id/label_repairFee" />
    <TextView
        android:id="@+id/label_repairNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_repairNote"
        android:textColor="@color/primary_text"
        android:layout_marginTop="@dimen/image_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/edit_repairFee"
        />
    <EditText
        android:id="@+id/edit_repairNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_repairNote"
        android:lines="3"
        android:singleLine="false"
        android:background="@drawable/shape_device_question"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/label_repairNote"
        />

    <TextView
        android:id="@+id/label_workDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_repair"
        android:textColor="@color/primary_text"
        android:layout_marginTop="@dimen/repair_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/edit_repairNote"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_repairItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/recyclr_max_height"
        app:layout_constraintTop_toBottomOf="@+id/label_workDetail">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/evaluate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_repairItem"
        >
        <TextView
            android:text="@string/evaluate_label"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/label_deviceState"
            android:text="@string/repair_switchOn"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/content_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:lines="3"
            />
        </ScrollView>
    </LinearLayout>



    <Button
        android:id="@+id/btn_upload_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_horizontal_margin"
        android:layout_marginRight="@dimen/login_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="@string/upload_button_label"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/shape_button_upload"
        android:layout_marginTop="@dimen/dp_36"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@+id/evaluate_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>