<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/appBar"
        layout="@layout/layout_main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_projectInfo"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_projectInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        app:layout_constraintStart_toStartOf="parent"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="false"
        >
        <TextView
            android:id="@+id/project_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:maxLines="8"
            android:minLines="6"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit1"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit1"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/item_edit1"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/zero_data_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_projectInfo"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <TextView
        android:id="@+id/item_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit2"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit2"/>

    <EditText
        android:id="@+id/item_edit2"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/zero_data_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_edit1"
        android:layout_marginTop="@dimen/edit_vertical_margin"
        android:singleLine="true"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/item_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit3"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit3"/>

    <EditText
        android:id="@+id/item_edit3"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:text="@string/zero_data_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_edit2"
        android:layout_marginTop="@dimen/edit_vertical_margin"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:digits=".0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <TextView
        android:id="@+id/item_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit4"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit4"/>

    <EditText
        android:id="@+id/item_edit4"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:text="@string/zero_data_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_edit3"
        android:layout_marginTop="@dimen/edit_vertical_margin"
        android:singleLine="true"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/item_label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label5"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit5"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit5"
        />

    <EditText
        android:id="@+id/item_edit5"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:text="@string/zero_data_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_edit4"
        android:layout_marginTop="@dimen/edit_vertical_margin"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/item_label6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemvalue_label6"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_edit6"
        app:layout_constraintBottom_toBottomOf="@+id/item_edit6" />
    <EditText
        android:id="@+id/item_edit6"
        android:layout_width="@dimen/value_input_margin"
        android:layout_height="wrap_content"
        android:text="@string/zero_data_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/edit_vertical_margin"
        android:singleLine="true"
        android:visibility="gone"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_edit5"
        />

    <!--上下翻页控件-->
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/btn_toPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_toprev"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/paper_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
        <ImageButton
            android:id="@+id/btn_toNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_tonext"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <ImageButton
            android:id="@+id/btn_randomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/zero_margin"
            android:src="@mipmap/btn_random"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>