<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.furja.verify.ui.ReleaseActivity">


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/product_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_productNo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_release"
         />

    <Button
        android:id="@+id/button_release"
        android:text="@string/action_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:drawableLeft="@mipmap/ic_release_left"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_no"/>

</androidx.constraintlayout.widget.ConstraintLayout>
