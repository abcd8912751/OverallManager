<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_receive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/ic_right_arrow"
        android:singleLine="false"
        android:textColor="@color/colorBlack"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_inspect"/>
    <TextView
        android:id="@+id/text_inspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:singleLine="false"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_receive"
        app:layout_constraintEnd_toStartOf="@+id/text_stock"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/text_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_inspect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>