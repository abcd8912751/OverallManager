<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chat_msg"
        app:layout_constraintBottom_toTopOf="@+id/transfer_chat"
        />
    <TextView
        android:id="@+id/transfer_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        app:layout_constraintTop_toBottomOf="@+id/text_chat"
        android:text="@string/transfer"/>

    <TextView
        android:id="@+id/content_chat"
        app:layout_constraintTop_toBottomOf="@+id/transfer_chat"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>